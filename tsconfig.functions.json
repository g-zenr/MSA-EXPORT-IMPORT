{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "netlify/functions",
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["netlify/functions/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
